{
  "openapi": "3.0.0",
  "info": {
    "title": "API prismaExpress",
    "description": "API de estudo usando prisma, express, typescript e zod, além do swagger/openapi para documentação.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Quando usado em local"
    },
    {
      "url": "prismaexpress.fly.dev",
      "description": "Quando usado em Produção"
    }
  ],
  "paths": {
    "/contas": {
      "get": {
        "tags": [
          "Contas"
        ],
        "summary": "Lista todas as contas",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/listarContas"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Contas"
        ],
        "summary": " Insere uma nova conta",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/createContas"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/responseCreateConta"
                }
              }
            }
          }
        }
      }
    },
    "/contas/{id}": {
      "get": {
        "tags": [
          "Contas"
        ],
        "summary": "Busca os dados de uma conta",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Id da conta"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/getConta"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Contas"
        ],
        "summary": "Soft delete da conta",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Id da conta"
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "createContas": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "create_at": {
            "type": "string",
            "format": "date-time"
          },
          "nome": {
            "type": "string",
            "maxLength": 60,
            "minLength": 2
          },
          "saldoInicial": {
            "type": "number",
            "minimum": 1
          },
          "saldoAtual": {
            "type": "number",
            "minimum": 1
          }
        },
        "required": [
          "nome"
        ]
      },
      "listarContas": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer"
            },
            "nome": {
              "type": "string"
            },
            "saldoInicial": {
              "type": "number"
            },
            "saldoAtual": {
              "type": "number"
            }
          },
          "required": [
            "id",
            "nome",
            "saldoInicial",
            "saldoAtual"
          ]
        }
      },
      "editarContas": {
        "type": "object",
        "properties": {
          "nome": {
            "type": "string"
          },
          "saldoInicial": {
            "type": "number",
            "minimum": 1
          }
        }
      },
      "getConta": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "nome": {
            "type": "string"
          },
          "saldoInicial": {
            "type": "number"
          },
          "saldoAtual": {
            "type": "number"
          }
        },
        "required": [
          "id",
          "nome",
          "saldoInicial",
          "saldoAtual"
        ]
      },
      "paramsId": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          }
        },
        "required": [
          "id"
        ]
      },
      "responseCreateConta": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "nome": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "nome"
        ]
      }
    }
  }
}