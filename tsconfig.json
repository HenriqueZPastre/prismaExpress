{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "allowJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "alwaysStrict": true,
    "importHelpers": true,
    "noImplicitReturns": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["./**/*.ts"]
}
