// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Contas {
    id           Int            @id @default(autoincrement())
    create_at    DateTime       @default(now())
    deletede_at  DateTime?
    nome         String
    saldoInicial Float
    saldoAtual   Float
    Lancamentos  Lancamentos[]
    contas_saldo contas_saldo[]
}

model Lancamentos {
    id               Int                @id @default(autoincrement())
    create_at        DateTime           @default(now())
    deletede_at      DateTime?
    descricao        String
    valor            Float
    dataVencimento   DateTime           @default(now())
    contasId         Int
    dataPagamento    DateTime?
    contas           Contas             @relation(fields: [contasId], references: [id])
    lancamentos_tags lancamentos_tags[]
}

model Tags {
    id               Int                @id @default(autoincrement())
    create_at        DateTime           @default(now())
    deletede_at      DateTime?
    nome             String
    lancamentos_tags lancamentos_tags[]
}

model lancamentos_tags {
    id            Int         @id @default(autoincrement())
    tagsId        Int
    lancamentosId Int
    tags          Tags        @relation(fields: [tagsId], references: [id])
    lacamentos    Lancamentos @relation(fields: [lancamentosId], references: [id])
}

model contas_saldo {
    contasId          Int      @id
    saldoAtual        Float
    ultimoAtualizacao DateTime @default(now())
    contas            Contas   @relation(fields: [contasId], references: [id])
}
